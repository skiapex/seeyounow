<% if @esas_assessment.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this assessment from being saved:</h2>
    <ul>
      <% @esas_assessment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3 class="page-header">
  Edit ESAS assessment done at <%= @esas_assessment.updated_at.to_s(:long) %> for <%= @esas_assessment.patient.first_name %> <%= @esas_assessment.patient.last_name %>
</h3>

<%= form_for @esas_assessment do |form| %>
  
  <div class="form-group">
    <%= form.label :inputter_name %>
    <%= form.text_field :inputter_name, class: "form-control", placeholder: "Imputter name" %>
  </div>

  <div class="form-group">
    <%= form.label :inputter_id %>
    <%= form.collection_select :inputter_id, Inputter.all, :id, :inputter_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :pain %>
    <%= form.text_field :pain, class: "form-control", placeholder: "Value from 1 - 10" %>
  </div>

  <div class="form-group">
    <%= form.label :pain_comment %>
    <%= form.text_field :pain_comment, class: "form-control", placeholder: "Leave a comment" %>
  </div>

  <div class="form-group">
    <%= form.label :tiredness %>
    <%= form.text_field :tiredness, class: "form-control", placeholder: "Value from 1 - 10" %>
  </div>

  <div class="form-group">
    <%= form.label :tiredness_comment %>
    <%= form.text_field :tiredness_comment, class: "form-control", placeholder: "Leave a comment" %>
  </div>

    <div class="form-group">
    <%= form.label :drowsiness %>
    <%= form.text_field :drowsiness, class: "form-control", placeholder: "Value from 1 - 10" %>
  </div>

  <div class="form-group">
    <%= form.label :drowsiness_comment %>
    <%= form.text_field :drowsiness_comment, class: "form-control", placeholder: "Leave a comment" %>
  </div>

    <div class="form-group">
    <%= form.label :nausea %>
    <%= form.text_field :nausea, class: "form-control", placeholder: "Value from 1 - 10" %>
  </div>

  <div class="form-group">
    <%= form.label :nausea_comment %>
    <%= form.text_field :nausea_comment, class: "form-control", placeholder: "Leave a comment" %>
  </div>

  <div class="form-group">
