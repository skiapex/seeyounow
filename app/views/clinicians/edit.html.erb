<% if @clinician.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this clinician from being saved:</h2>
    <ul>
      <% @clinician.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3 class="page-header">
  Edit information for <%= @clinician.occupation_id %> <%= @clinician.first_name %> <%= @clinician.last_name %>
</h3>

<%= form_for @clinician do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :last_name %>
  	<%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :occupation_id %>
  	<%= form.text_field :occupation_id, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :gender_id %>
  	<%= form.text_field :gender_id, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :email %>
  	<%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :password %>
  	<%= form.text_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :office_number %>
  	<%= form.text_field :office_number, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :mobile_number %>
  	<%= form.text_field :mobile_number, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= form.label :emergency_message %>
  	<%= form.text_field :emergency_message, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
  	<%= form.label :care_group_id %>
  	<%= form.text_field :care_group_id, class: "form-control" %>
  </div>
  <%= form.button 'Update Clinician', class: "btn btn-success" %>
<% end %>