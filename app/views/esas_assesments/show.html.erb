<h1 class="page-header">
  <%= @esas_assesment.patient_id %> for <%= @esas_assesment.clinician_id %>
  <span class="pull-right">
    <%= link_to "Edit", edit_esas_assesment_path, class: 'btn btn-sm btn-success' %>
  </span>
</h1>
 <h3 span class="time"><%= @esas_assesment.time %></span>
</h3>

<div class="row">
  <div class="col-md-9 col-md-offset-3 information">
    <h2 class="page-header">Information</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <td><strong>Inputter Name</strong></td>
        <td><%= @esas_assesment.inputter_name %></td>
      </tr>
      <tr>
        <td><strong>Inputter ID</strong></td>
        <td><%= @esas_assesment.inputter_id %></td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-3 text-center">
    <p><strong>Pain:</strong> <%= @esas_assesment.pain %></p>
    <p><strong>Comment:</strong> <%= @esas_assesment.pain_comment %></p>

  </div>
  <div class="col-md-4 summary">
    <h2>Overall Comment</h2>
    <p>
      <%= @esas_assesment.esas_comment %>
    </p>
  </div>
</div>