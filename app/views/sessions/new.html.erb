<body>
<!--=== Content Part ===-->    
<div class="container">
    <!--Reg Block-->
    <div class="reg-block">
        <%= image_tag("synlogo.png", size: "286x43")%>
        <div class="reg-block-header">
            <ul class="social-icons text-center">
                <li><a class="rounded-x social_facebook" href="https://www.facebook.com/see.you.now.health.tools" data-original-title="Facebook" href="#"></a></li>
                <li><a class="rounded-x social_twitter" href="https://twitter.com/SeeYouNowTools" data-original-title="Twitter" href="#"></a></li>
                <!-- <li><a class="rounded-x social_googleplus" data-original-title="Google Plus" href="#"></a></li>-->
                <li><a class="rounded-x social_linkedin" href="https://www.linkedin.com/company/seeyounow" data-original-title="Linkedin" href="#"></a></li>
            </ul>
            <h2>Sign In</h2>
            <p>Don't Have Account? Click <a class="color-green" href="http://unbouncepages.com/seeyounow/">here</a> for more information.</p>
            <!-- <p>Don't Have Account? Click <a class="color-green" href="page_registration1.html">Sign Up</a> to registration.</p> -->           
        </div>
        <%= form_tag sessions_path, class: "form-signin" do %>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <%= text_field_tag :email, "", class: "form-control", placeholder: "Email Address or Username" %>
        </div>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
        </div>
        <hr>

        <p><%= link_to "forgotten password?", new_password_reset_path %></p>

        <div class="checkbox">
            <label>
                <%= check_box_tag :remember_me, 1, params[:remember_me] %> 
                <p>Always stay signed in</p>
            </label>            
        </div>
                                
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <%= button_tag "Log In", class: "btn-u btn-block" %>
            </div>
        </div>
        <% end %>
    </div>
    <!--End Reg Block-->
</div><!--/container-->
<!--=== End Content Part ===-->

<!--=== Sticky Footer ===-->
