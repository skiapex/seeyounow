<head>
    <title>SeeYouNow | Patient Index</title>
</head>	

<h3 class="page-header">
  All Patients
  <span class="pull-right">
    <%= link_to "New Patient", new_patient_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>

<ul>
  <% @patients.each do |patient| %>
    <li><h3><%= link_to "#{patient.first_name} #{patient.last_name}", patient_path(patient) %></h3> <%= link_to "Edit", edit_patient_path(patient) %> <%= link_to "Delete", patient_path(patient), method: :delete, data: {confirm: 'Are you sure you want to delete'} %></li>
  <% end %>
</ul>

