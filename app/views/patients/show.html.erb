<h3 class="page-header">
  <%= @patient.first_name %> <%= @patient.last_name %>
  <span class="pull-right">
    <%= link_to "Edit", edit_patient_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>
 <h3 span class="diagnosis"><%= @patient.diagnosis %>
 <span class="pull-right">
    <%= link_to "Complete ESAS assesment", new_esas_assesment_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>
<h3 span class="nul">
 <span class="pull-right">
    <%= link_to "Complete PFRS assesment", new_esas_assesment_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>

<div class="row">
  <div class="col-md-3">
    <p><strong>Username:</strong> <%= @patient.username %></p>
    <p><strong>Gender:</strong> <%= @patient.gender.gender_type if @patient.gender %></p>
    <p><strong>Age:</strong> <%= @patient.age %></p>
    <p><strong>Address:</strong> <%= @patient.address %></p>
    <p><strong>Email:</strong> <%= @patient.email %></p>
    <p><strong>Phone number:</strong> <%= @patient.phone_number %></p>
    <p><strong>Other symptom:</strong> <%= OtherSypmtom.find_by(id: @patient.other_symptom).symptom_type %></p>
    <p><strong>Caregiver name:</strong> <%= @patient.caregiver_name %></p>
  </div>
  <div class="col-md-3 summary">
    <h2>Goals of care:</h2>
    <p>
      <%= @patient.goals_of_care %>
    </p>
  </div>
  <div class="col-md-4 actors">
    <h2>ESAS Scores:</h2>
    <ul class="list-unstyled">
    <% @esas_assesments.each do |esas_assesment| %>
      <li>For <%= @patient.clinician.occupation_id %> <%= Clinician.find_by(id: esas_assesment.clinician_id).last_name %> at <%= link_to esas_assesment.time, esas_assesment_path(esas_assesment) %></li>
    <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-9 col-md-offset-3 reviews">
    <h2 class="page-header">Information</h2>
    <table class="table table-striped table-bordered">
      <tr>
        <td><strong>Shared with</strong></td>
        <td><%= @patient.shared_with %></td>
      </tr>
      <tr>
        <td><strong>Password</strong></td>
        <td><%= @patient.password %></td>
      </tr>
      <tr>
        <td><strong>Patient deceased</strong></td>
        <td><%= @patient.patient_deceased %></td>
      </tr>
      <tr>
        <td><strong>Patient archived</strong></td>
        <td><%= @patient.patient_archived %></td>
      </tr>
    </table>
  </div>
</div>