<!-- 
  Finish the signup form
  Validate that the email, password, and name are present
-->

<%= form_for @user do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <%= form.button 'Sign Up', class: "btn btn-success" %>
<% end %>