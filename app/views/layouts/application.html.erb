<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->  
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->  
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]--> 
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SeeYouNow</title>

    <!-- Favicon -->
    <%= favicon_link_tag 'favicon.ico'  %>

    <!-- Logo Font -->
    <link href="//fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet" type="text/css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track' => true %>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'style', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">

          <!-- Alerts -->
      <% if notice %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger" role="alert"><%= alert %></div>
      <% end %>
      
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- SeeYouNow and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <% if current_clinician %>
              <%= link_to "SeeYouNow", root_path, class: "navbar-brand" %>
            <% else %>
              <%= link_to "SeeYouNow", patient_path(current_user.patient), class: "navbar-brand" %>
            <% end %>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <% if current_clinician %>
          
            <ul class="nav navbar-nav">
              <li>
              <a href="/">
                <i class="fa fa-medkit"></i> Home 
                <span class="sr-only">(current)</a></li>

                <li>
                <a href="/">
                  <i class="fa fa-bed"></i><span class="sr-only">
                  <%= link_to "Patients", patients_path %><span class="sr-only"></span></a></li>
              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-line-chart"> </i> Scores <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li>
                    <% if current_clinician %>
                      <%= link_to "ESAS Assessment", esas_assessments_path %>
                    <% end %>
                  </li>
                  <li>
                    <% if current_clinician %>
                      <a href="#">PFRS scores</a>
                     <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <% if current_clinician %>
                      <a href="#">Other Symptoms</a>
                     <% end %>
                  </li>
                  <li class="divider"></li>
                  <li>
                    <% if current_clinician %>
                      <a href="#"><%= link_to "Comments", comments_path %></a>
                     <% end %>
                  </li>
                </ul>
              </li>              
            </ul>
            <form class="navbar-form navbar-left" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Enter patient name">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <% end %>

            <% if current_clinician.nil? %>
          
            <ul class="nav navbar-nav">
              <li>
              <a href="/">
                <i class="fa fa-medkit"></i><span class="sr-only">
                <%= link_to "Home", patient_path(current_user.patient) %></span></a></li>

              <li>
              <a href="/">
                <i class="fa fa-comments"></i><span class="sr-only">
                <%= link_to "Conversations", comments_path %></span></a></li>

              <li>
              <a href="/">
                <i class="fa fa-list"></i><span class="sr-only">
                <%= link_to "ESAS Assessment", new_esas_assessment_path %></span></a></li>

              <li>
              <a href="/">
                <i class="fa fa-list"></i><span class="sr-only">
                <%= link_to "PFRS Assessment", new_esas_assessment_path %></span></a></li>

                
                            
            </ul>
            <% end %>

            <ul class="nav navbar-nav navbar-right">
              <li>
              <!-- <i class="fa fa-user-md"></i> -->
                    <% if current_user %>
                        <% if current_user.clinician.nil?  %>
                          <a href="#">
                          <i class="fa fa-user"></i>
                            Hi, <%= link_to "#{current_user.patient.first_name} #{current_user.patient.last_name}", patient_path(current_user.patient) %>
                          </a>
                        <% else %>
                          <a href="#">
                          <i class="fa fa-user"></i>
                            Hi, <%= link_to "#{current_user.clinician.first_name} #{current_user.clinician.last_name}", clinician_path(current_user.clinician) %>
                          </a>
                        <% end %>
                    <% else %>
                      <a href="#">
                      <i class="fa fa-user"></i>
                        <%= link_to "Log In", login_path %>
                      </a>
                    <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-cog"></i> Settings <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#"><%= link_to "Settings", edit_user_path(current_user) %></a></li>
                  <% if current_clinician %>
                    <li><a href="#"><%= link_to "Edit Profile", edit_clinician_path(current_user.clinician) %></a></li>
                  <% else %>
                    <li><a href="#"><%= link_to "Edit Profile", edit_patient_path(current_user.patient) %></a></li>
                  <% end %>
                  <li><a href="#"><% if current_clinician %>
                      <%= link_to "Notification Settings", logout_path %>
                    <% end %></a></li>
                  <li class="divider"></li>
                  <li>
                    <% if current_user %>
                      <%= link_to "Log Out", logout_path %>
                    <% end %>
                  </li>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
         <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
