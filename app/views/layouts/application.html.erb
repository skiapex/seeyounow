<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->  
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->  
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]--> 
<head>
    
  <!--<title>SeeYouNow</title> -->

  <!-- Meta -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="SeeYouNow">

  <!-- Favicon -->
  <%= favicon_link_tag 'favicon.ico'  %>

  <!-- Logo Font -->
  <link href="//fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet" type="text/css">

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

  <!-- CSS Global Compulsory -->
  <%= stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track' => true %>

   <!-- CSS Implementing Plugins -->
  <%= stylesheet_link_tag "custom-sky-forms", media: "all", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag "line-icons", media: "all", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag "perfect-scrollbar", media: "all", "data-turbolinks-track" => true %>

  <!-- CSS Page Style -->
  <%= stylesheet_link_tag "profile", media: "all", "data-turbolinks-track" => true %>

  <!-- CSS Theme -->    
  <%= stylesheet_link_tag "default", media: "all", "data-turbolinks-track" => true %>

  <!-- CSS Customization -->
  <%= stylesheet_link_tag "custom", media: "all", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div class="wrapper">
  <!--=== Header ===-->    
  <div class="header">  
    <!-- Navbar -->
    <div class="navbar navbar-default mega-menu" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="fa fa-bars"></span>
                </button>
                <% if current_clinician %>
                  <%= link_to image_tag("synlogo.png", size: "200x44"), root_path, class: "navbar-brand" %>
                <% else %>
                  <%= link_to image_tag("synlogo.png", size: "200x44"), patient_path(current_user.patient), class: "navbar-brand" %>
                <% end %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <!-- Home -->
                    <li class="dropdown">
                        <a href="/home">Home <span class="sr-only"></a>
                    </li>
                    <!-- End Home -->

                    <% if current_clinician %> 

                    <!-- Patients -->                        
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            Patients
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="/patients">Current Patients</a></li>
                            <li><a href="/patients/new">New Patient</a></li>
                        </ul>
                    </li>
                    <!-- End Patient -->

                    <!-- ESAS Assessments -->                        
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            ESAS Assessments
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="/esas_assessments">View scores</a></li>
                            <li><a href="/esas_assessments/new">New assessment</a></li>
                            <li><a href="/esas_assessments/new">Other symptoms</a></li>
                        </ul>
                    </li>
                    <!-- End ESAS Assessments -->
                    

                    <!-- PFRS Assessments -->                        
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            PFRS Assessments
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="/esas_assessments">View scores</a></li>
                            <li><a href="/esas_assessments/new">New assessment</a></li>
                        </ul>
                    </li>
                    <!-- End PFRS Assessments -->

                    <!-- Comments -->                        
                    <li class="dropdown">
                        <a href="/comments">Comments <span class="sr-only"></a>
                    </li>
                    <!-- End Comments -->

                    <% else %>  <!-- start patient section -->
                    
                    <!-- ESAS Assessments -->                        
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            ESAS Assessments
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="/esas_assessments">View scores</a></li>
                            <li><a href="/esas_assessments/new">New assessment</a></li>
                        </ul>
                    </li>
                    <!-- End ESAS Assessments -->
                    

                    <!-- PFRS Assessments -->                        
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            PFRS Assessments
                        </a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="/esas_assessments">View scores</a></li>
                            <li><a href="/esas_assessments/new">New assessment</a></li>
                        </ul>
                    </li>
                    <!-- End PFRS Assessments -->

                    <!-- Comments -->                        
                    <li class="dropdown">
                        <a href="/comments">Comments <span class="sr-only"></a>
                    </li>
                    <!-- End Comments -->

                    <!-- Emergency Message -->
                    <li class="dropdown">
                      <%= link_to "Emergency Message", clinician_path(current_user.patient.clinician) %> <span class="sr-only">
                    </li>
                    <!-- Emergency Message -->

                    <% end %> <!-- end of left hand nav bar -->

                    <!-- Profile -->
                    <% if current_clinician %>
                      <li class="dropdown">
                        <%= link_to "View Profile", clinician_path(current_user.clinician) %> <span class="sr-only">
                      </li>
                    <% else %>
                      <li class="dropdown">
                        <%= link_to "View Profile", patient_path(current_user.patient) %> <span class="sr-only">
                      </li>
                    <% end %>
                    <!-- End Profile -->
                    
                    <!-- Settings -->
                    <% if current_user %>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-cog"></i> Settings
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Edit email and password", edit_user_path(current_user) %></li>
                            <% if current_clinician %>
                              <li><%= link_to "Edit Profile", edit_clinician_path(current_user.clinician) %></li>
                              <li><a href="#">Notification settings</a></li>
                            <% else %>
                              <li><%= link_to "Edit Profile", edit_patient_path(current_user.patient) %></li>
                            <% end %>
                            <li class="divider"></li>
                            <li><a href="/logout">Log out</a></li>
                        </ul>
                    </li>  
                    <% else %>
                    <li class="dropdown">
                        <a href="/login">Log In <span class="sr-only">(current)</a>
                    </li>
                    <% end %>
                    <!-- End Settings -->
                    
                </ul>
            </div><!--/navbar-collapse-->
        </div>    
    </div>            
    <!-- End Navbar -->
  </div>
  <!--=== End Header ===-->

  <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
       <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </div>

  

  </div><!--/wrapper-->

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

<!-- JS Global Compulsory -->           
<%= javascript_include_tag "jquery-migrate.min", "data-turbolinks-track" => true %>

<!-- JS Implementing Plugins -->
<%= javascript_include_tag "back-to-top", "data-turbolinks-track" => true %>

<%= javascript_include_tag "waypoints.min", "data-turbolinks-track" => true %>

<%= javascript_include_tag "jquery.counterup.min", "data-turbolinks-track" => true %>
<!-- Datepicker Form -->
<%= javascript_include_tag "jquery-ui.min", "data-turbolinks-track" => true %>
<!-- Scrollbar -->
<%= javascript_include_tag "jquery.mousewheel", "data-turbolinks-track" => true %>

<%= javascript_include_tag "perfect-scrollbar", "data-turbolinks-track" => true %>
<!-- JS Customization -->
<%= javascript_include_tag "custom", "data-turbolinks-track" => true %>
<!-- JS Page Level -->           
<%= javascript_include_tag "app", "data-turbolinks-track" => true %>

<%= javascript_include_tag "datepicker", "data-turbolinks-track" => true %>
<script type="text/javascript">
    jQuery(document).ready(function() {
        App.init();
        App.initCounter();
        Datepicker.initDatepicker();      
    });
</script>
<script>
    jQuery(document).ready(function ($) {
        "use strict";
        $('.contentHolder').perfectScrollbar();
    });
</script>
<!--[if lt IE 9]>
    <script src="assets/plugins/respond.js"></script>
    <script src="assets/plugins/html5shiv.js"></script>
<![endif]-->

</body> 
</html>
